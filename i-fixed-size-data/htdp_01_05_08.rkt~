#reader(lib "htdp-beginner-reader.ss" "lang")((modname htdp_01_05_08) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #f #t none #f () #f)))
(define-struct r3 [x y z])
; An R3 is a structure:
;   (make-r3 Number Number Number)
 
(define ex1 (make-r3 1 2 13))
(define ex2 (make-r3 -1 0 3))

; R3 -> Number
; computes the distance from the origin for a point
; in 3-dimensional space.
(check-expect (distance-3d (make-r3 1 2 13)) (sqrt (+ (sqr 1) (sqr 2) (sqr 13))))
(check-expect (distance-3d (make-r3 -1 0 3)) (sqrt (+ (sqr -1) (sqr 0) (sqr 3))))
(define (distance-3d p)
  0)