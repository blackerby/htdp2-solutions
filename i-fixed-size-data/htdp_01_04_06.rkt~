#reader(lib "htdp-beginner-reader.ss" "lang")((modname htdp_01_04_06) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #f #t none #f () #f)))
; A Price falls into one of three intervals: 
; — 0 through 999.99
; — 1000 through 9999.99
; — 10000 and above.
; interpretation the price of an item  

; Price -> Number
; computes the amount of tax charged for p
(check-expect (sale-tax 0) 0)
(check-expect (sales-tax 537) 0)
(check-expect (sales-tax 999.99) 0)
(check-expect (sales-tax 1000) (* 0.05 1000))
(check-expect (sales-tax 1282) (* 0.05 1282))
(check-expect (sales-tax 9999.99) (* 0.05 9999.99))
(check-expect (sales-tax 10000) (* 0.08 10000))
(check-expect (sales-tax 12017) (* 0.08 12017))

(define (sales-tax p) 0)